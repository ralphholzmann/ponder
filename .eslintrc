{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier", "plugin:flowtype/recommended"],
  "plugins": ["prettier", "flowtype"],
  "rules": {
    "comma-dangle": ["error", "never"],
    "prettier/prettier": "error",
    "no-param-reassign": "off",
    "linebreak-style": ["error", "unix"],
    "no-restricted-syntax": "off"
  },
  "env": {
    "node": true,
    "es6": true
  }
}
